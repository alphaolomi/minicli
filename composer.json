{
  "name": "alphaolomi/minicli",
  "description": "Minicli Application Template powered with Termwind and Plates",
  "license": "MIT",
  "type": "library",
  "homepage": "https://alphaolomi.github.io/minicli/",
  "keywords": [ "cli", "command-line", "template", "termwind", "plates", "minicli" ],
  "authors": [
    {
      "name": "Alpha Olomi",
      "email": "hello@alphaolomi.com",
      "role": "Developer"
    }
  ],  
  "require": {
    "php": "^8.1",
    "minicli/minicli": "^3.0 || ^4.0",
    "nunomaduro/termwind": "^1.15",
    "league/plates": "^3.5"
  },
  "require-dev": {
    "pestphp/pest": "^2.6",
    "laravel/pint": "^1.10"
  },
  "bin": [
    "bin/minicli"
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "test": [ "pest" ],
    "lint": [ "pint" ]
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "config": {
    "sort-packages": true,
    "bin-dir": "/usr/local/bin",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
